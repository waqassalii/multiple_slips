<odoo>
  <data>
     <record id="custom_res_company_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="background_image" string="Apps Dashboard">
                    <group name="apps_dashboard_settings">
                        <field name="dashboard_background_img" widget="image" class="oe_avatar"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>